{
  "manifest_version": 3,
  "name": "Bach-Block",
  "version": "1.0",
  "description": "Bachlor Franchise Spoiler Blocker",
  "icons": {
    "128": "img/rose.png",
    "48": "img/rose.png",
    "16": "img/rose.png"
  },
  "action": {
    "default_icon": "img/rose.png",
    "default_popup": "blocker.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    { "matches": ["https://*/*"], "js": ["jquery.min.js", "blocker.js"] }
  ]
}
